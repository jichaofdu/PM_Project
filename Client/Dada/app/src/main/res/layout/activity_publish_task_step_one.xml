<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publish_task_step_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projectmanager.dada.pages.PublishTaskStepOneActivity">

    <Button
        android:id="@+id/first_step_finish_button"
        android:text="@string/fisrt_step_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/dada_blue"
        android:textColor="@color/white"/>

    <com.amap.api.maps2d.MapView

        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/first_step_finish_button"
        />
    <EditText
        android:id="@+id/first_step_search"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:background="@color/white"
        android:hint="@string/search_hint"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp" />
</RelativeLayout>
